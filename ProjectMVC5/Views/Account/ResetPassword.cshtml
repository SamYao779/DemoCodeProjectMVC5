@{
    ViewBag.Title = "ResetPassword";
}

<h2>ResetPassword</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary()
    <div class="form-group row">
        <div class="col-md-3">
            <label>UserName :</label>
        </div>
        <div class="col-md-7">
            @Html.TextBox("UserName", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label>Token Code :</label>
        </div>
        <div class="col-md-7">
            @Html.TextBox("NewCode", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label>New Password :</label>
        </div>
        <div class="col-md-7">
            @Html.Password("NewPass", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label>Confirm Password :</label>
        </div>
        <div class="col-md-7">
            @Html.Password("ConfirmPass", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
        </div>
        <div class="col-md-7">
            <button class="btn btn-primary" type="submit">Reset Password</button>
        </div>
    </div>
}