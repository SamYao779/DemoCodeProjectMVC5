@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Index";
}

<h2>Role Management</h2>
<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Role Manager</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">List Of Role</a></li>
</ul>

<div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
        @Html.ValidationSummary()
        @using (Html.BeginForm("Add", "Role"))
        {
            <div class="form-group row">
                <label class="col-md-2">Id</label>
                <div class="col-md-5">
                    @Html.TextBoxFor(p => p.Id, new { @class = "form-control", @Readonly = true })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2">Name</label>
                <div class="col-md-5">
                    @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2"></label>
                <div class="col-md-5">
                    <button class="btn btn-primary" onclick="form.action='/Admin/Role/Add'">Add</button>
                    <button class="btn btn-primary" onclick="form.action='/Admin/Role/Update'">Update</button>
                    <a href="/Admin/Role/Remove/@Model.Id" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this User ' + '@Model.Name ' + '?');">Delete</a>
                    <a href="/Admin/Role/Index" class="btn btn-default">Reset</a>
                </div>
            </div>
        }
    </div>
    <div role="tabpanel" class="tab-pane" id="profile">
        <br />
        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
            @foreach(var p in ViewBag.Role)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>
                        <a href="/Admin/Role/Edit/@p.Id" class="glyphicon glyphicon-pencil"></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>