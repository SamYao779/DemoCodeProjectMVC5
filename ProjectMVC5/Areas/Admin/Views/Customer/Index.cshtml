@model IEnumerable<ProjectMVC5.Customer>

<h2>Customer Management</h2>
<a href="/Admin/Customer/Add" class="btn btn-primary btn-create">Add New Item</a>
<br /><br />
<table class="table table-bordered table-hover tbl-customer">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.FullName</td>
                <td>@p.Email</td>
                <td>
                    <a href="/Admin/Customer/ConfirmDelete/@p.Id" class="btn-delete btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">

    </div>
</div>
