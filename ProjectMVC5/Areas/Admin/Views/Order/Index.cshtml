@model IEnumerable<ProjectMVC5.Order>
<h2>Order Management</h2>
<table class="table table-bordered table-hover tbl-order">
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer Name</th>
            <th>Receiver</th>
            <th>Order Date</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Order Status</th>
            <th>Amout</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr class="tbody">
                <td>@p.Id</td>
                <td>@p.Customer.Id</td>
                <td>@p.Receiver</td>
                <td>@Html.FormatValue(p.OrderDate, "{0:dd/MM/yyyy}")</td>
                <td>@p.Phone</td>
                <td>@p.Address</td>
                <td>@p.OrderState.Status</td>
                <td>@Html.FormatValue((p.OrderDetails.Sum(c => c.Quantity * c.UnitPrice)), "{0:c}")</td>
                <td>@p.Description</td>
                <td>
                    <a href="/Admin/Order/Edit/@p.Id" class="btn-edit btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                </td>
                <td>
                    <a href="/Admin/Order/ConfirmDelete/@p.Id" class="btn-delete btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
                <td>
                    <a href="/Admin/Order/ViewDetail/@p.Id" class="btn-default btn btn-detail"><i class="glyphicon glyphicon-list"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">

    </div>
</div>
