@model ProjectMVC5.Order

@using (Html.BeginForm("Update", "Order", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(p => p.Id)
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLable">Update Item</h4>
        </div>
        <div class="modal-body">
            <div class="form-group row">
                <label class="col-md-3">Customer Name</label>
                <div class="col-md-5">
                    @Html.TextBoxFor(p => p.CustomerId, new { @class = "form-control", @readonly = true })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3">Người nhận</label>
                <div class="col-md-5">
                    @Html.TextBoxFor(p => p.Receiver, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3">Ngày đặt hàng</label>
                <div class="col-md-5">
                    @Html.TextBoxFor(p => p.OrderDate, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3">Số ĐT</label>
                <div class="col-md-5">
                    @Html.TextBoxFor(p => p.Phone, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3">Địa chỉ</label>
                <div class="col-md-5">
                    @Html.TextBoxFor(p => p.Address, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3">Tình trạng đơn hàng</label>
                <div class="col-md-5">
                    @Html.DropDownListFor(p => p.OrderStateId, new SelectList(ViewBag.OrderState, "Id", "Status"), string.Empty, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3">Ghi chú</label>
                <div class="col-md-5">
                    @Html.TextAreaFor(p => p.Description, new { @class = "form-control", rows = 5 })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
    </div>
}
