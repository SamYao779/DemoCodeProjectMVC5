<h2>Product Management</h2>
<nav>
    <ul class="pager">
        <li><button class="btn btn-toolbar">First</button></li>
        <li><button class="btn btn-toolbar">Prev</button></li>
        <li><button class="btn btn-toolbar">Next</button></li>
        <li><button class="btn btn-toolbar">Last</button></li>
    </ul>
</nav>
<div id="results"></div>
<nav>
    <ul class="pager">
        <li><button class="btn btn-toolbar">First</button></li>
        <li><button class="btn btn-toolbar">Prev</button></li>
        <li><button class="btn btn-toolbar">Next</button></li>
        <li><button class="btn btn-toolbar">Last</button></li>
    </ul>
</nav>
@section scripts{
    <script>
        $(function () {
            fnLoadPage();
            $(".pager button").click(function () {
                label = $(this).text().toLowerCase();
                switch (label) {
                    case "first":
                        pageNo = 0;
                        break;
                    case "prev":
                        if (pageNo > 0) {
                            pageNo--;
                        }
                        break;
                    case "next":
                        if (pageNo < pageCount - 1) {
                            pageNo++;
                        }
                        break;
                    case "last":
                        pageNo = pageCount - 1;
                        break;
                }
                fnLoadPage();
            });
        });
        var pageNo = 0;
        var pageCount = @ViewBag.pageCount
        function fnLoadPage() {
            $.ajax({
                url: "/Admin/Product/Index",
                data: { pageNo: pageNo },
                success: function (result) {
                    $("#results").html(result);
                }
            });
        }
    </script>
}
